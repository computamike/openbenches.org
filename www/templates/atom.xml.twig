<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <id>{{ url }}</id>
  <title>{{ title }}</title>
  <updated>{{ benches|first.added|date("Y-m-d\\TH:i:sP") }}</updated>
  <link rel="self" type="application/atom+xml" href="{{ url }}atom.xml" />
  <link rel="alternate" type="text/html" href="{{ url }}" />

  {% for bench in benches %}
    <entry>
      <id>{{ url }}bench/{{ bench.benchID }}</id>
      <title>{{ bench.inscription }}</title>
      <published>{{ bench.added|date("Y-m-d\\TH:i:sP") }}</published>
      <updated>{{ bench.added|date("Y-m-d\\TH:i:sP") }}</updated>
      <link rel="alternate" type="text/html" href="{{ url }}bench/{{ bench.benchID }}" />
      <author>
        <name>{{ bench.name }}</name>
      </author>
      <content type="html">
        <![CDATA[{{ bench.inscription }}<br><img src="{{ url }}{{ bench.image }}" />]]>
      </content>
    </entry>
  {% endfor %}
</feed>